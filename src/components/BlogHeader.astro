---
import Header from './Header.astro';

export interface Props {
  headers: any;
}

const { headers } = Astro.props as Props;
---

<Header isBlog>
  <Fragment slot="blog-toc">
    <span
      class="w-full mt-8 font-semibold text-right border-b border-dotted border-text_color md:w-1/2 text-text_color">On
      this
      page</span>
    <ul class="mt-4 text-xs text-right space-y-2">
      {headers.map(({ depth, slug, text }) => (
      <li>
        <a href={`#${slug}`}>
          &#35; {text}
        </a>
      </li>
      ))}
    </ul>
  </Fragment>
</Header>