{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*.astro"],
			"@/layouts/*": ["src/layouts/*.astro"],
			"@/util": ["src/util.ts"],
			"@/stores/*": ["src/stores/*"],
			"@/types": ["src/types.ts"]
		},
		// Add type definitions for our Vite runtime.
		"types": ["@astrojs/image/client"]
	}
}
